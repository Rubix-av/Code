import java.util.LinkedList;

public class Main{
	public static void main(String[] args) {
		
		LinkedList<String> linkedList = new LinkedList<String>();
		
		//LinkedList as a Stack Data Structure
		/*
		linkedList.push("A");
		linkedList.push("B");
		linkedList.push("C");
		linkedList.push("D");
		linkedList.push("F");
		linkedList.pop();
		*/
		
		//Linked List as a Queue Data Structure
		linkedList.offer("A");
		linkedList.offer("B");
		linkedList.offer("C");
		linkedList.offer("D");
		linkedList.offer("F");
		//linkedList.poll();
		
		//Adds letter "E" instead of replacing to index number 4, i.e. 5th position
		linkedList.add(4,"E");
		
		//removes first occurrence of specified element
		linkedList.remove("E"); 
		
		System.out.println(linkedList.indexOf("F")); //returns index number of specified element
		System.out.println(linkedList.peekFirst()); //return first element of LinkedList
		System.out.println(linkedList.peekLast()); //return last element of LinkedList
		linkedList.addFirst("0"); //adds "0" as first element of LinkedList
		linkedList.addLast("G"); //adds "G" as last element of LinkedList
		
		System.out.println(linkedList);
	}
}